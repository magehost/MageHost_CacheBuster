<?xml version="1.0" encoding="UTF-8"?>
<config>
    <sections>
        <web translate="label">
            <groups>
                <cache_buster translate="label comment">
                    <label>MageHost.pro: Cache Buster for JS and CSS</label>
                    <comment><![CDATA[Before you raise the parameter value press <b>[Flush JavaScript/CSS Cache]</b> via the
                                    <b>System > Cache Management</b> menu.]]></comment>
                    <frontend_type>text</frontend_type>
                    <sort_order>25</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <param translate="label">
                            <label>Parameter Name</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </param>
                        <value translate="label comment">
                            <label>Parameter Value</label>
                            <comment><![CDATA[Raise this value to bust CSS and JS cache in visitor's browsers.]]></comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <depends>
                                <active>1</active>
                            </depends>
                        </value>
                    </fields>
                </cache_buster>
            </groups>
        </web>
    </sections>
</config>

